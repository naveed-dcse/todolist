<!DOCTYPE html>
<%- include('header') -%>

<body>
  <div class="box" id="heading">
    <h1><%= listItems %> </h1>
  </div>
  <div class="box">

    <% newListItem.forEach(function(item) { %>
      <form action="/delete" method="post">
        <div class="item">
          <input name="checkbox" type="checkbox" onchange="this.form.submit()" value=<%= item._id %>>
          <p><%= item.name %></p>
        </div>
        <input type="hidden" name="listName" value=<%=listItems%>>
      </form>

    <% }); %>



    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus>
      <button type="submit" name="list" value=<%= listItems %>>+</button>
    </form>
  </div>
  <%- include('footer') -%>
